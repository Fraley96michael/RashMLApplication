<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56201C1C"
    android:backgroundTint="#D2090808">

    <ImageView
        android:id="@+id/imageViewAboutUsDoctor"
        android:layout_width="411dp"
        android:layout_height="338dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewAboutUs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_undraw_doctor_kw_5_l" />

    <TextView
        android:id="@+id/textViewAboutUs"
        android:layout_width="162dp"
        android:layout_height="37dp"
        android:fontFamily="@font/oxygen_light"
        android:text="About Us"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewAboutUsDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAboutUsDoctor" />

    <TextView
        android:id="@+id/textViewAboutUsDescription"
        android:layout_width="347dp"
        android:layout_height="185dp"
        android:layout_marginTop="28dp"
        android:lineSpacingExtra="8sp"
        android:text="We are an application interface that allows users to use thier photo gallery or live footage to see what kind of skin disease they may have. Through this application we collect data to help ensure better results. We will also send user to a doctor nearby that will help them get immediate medical treatment. Thank you for using our application."
        android:textAlignment="center"
        android:textColor="#101010"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAboutUs" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_aboutUsContinue"
        android:layout_width="290dp"
        android:layout_height="71dp"
        android:background="@drawable/rounded_corner_view2"
        android:backgroundTint="#D2090808"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAboutUsDescription"
        app:layout_constraintVertical_bias="0.538" />
</androidx.constraintlayout.widget.ConstraintLayout>